# Domain
DOMAIN=paerser2.ru

# Environment
ENVIRONMENT=production

# Docker images
DOCKER_IMAGE_BACKEND=messager-backend
DOCKER_IMAGE_FRONTEND=messager-frontend
TAG=latest

# Backend CORS origins (comma-separated)
BACKEND_CORS_ORIGINS=https://paerser2.ru,http://paerser2.ru

# Secret key (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=changethis

# First superuser
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Database
SQLITE_DB_PATH=data/app.db

# Optional: Email settings (if needed)
# SMTP_HOST=smtp.example.com
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password
# EMAILS_FROM_EMAIL=noreply@example.com

# Optional: Sentry (if using)
# SENTRY_DSN=
